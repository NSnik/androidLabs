<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/batteryLevel" android:layout_marginEnd="120dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="120dp"
            android:layout_marginTop="150dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.7" android:text="TextView" android:textSize="24sp"
            android:textAlignment="center"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/battaryLevelBar" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/batteryLevel" android:indeterminate="false"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="120dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="120dp"/>
    <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp" app:srcCompat="@drawable/bat"
            android:id="@+id/imageView2" android:layout_marginBottom="120dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="120dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="120dp"/>
</android.support.constraint.ConstraintLayout>