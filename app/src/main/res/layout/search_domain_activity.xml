<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text|textPersonName"
            android:ems="10"
            android:id="@+id/searchDomainText" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Найти"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/searchDomainBtn" app:layout_constraintStart_toEndOf="@+id/searchDomainText"
            android:layout_marginStart="16dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:textAlignment="center"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/searchDomainText"
            android:id="@+id/domainsList" android:scrollbars="vertical"/>
</android.support.constraint.ConstraintLayout>