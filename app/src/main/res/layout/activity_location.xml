<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/locatinsText" android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="center"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationProgressBar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="120dp"
            android:layout_marginTop="120dp" app:layout_constraintTop_toBottomOf="@+id/locatinsText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="120dp"
            app:layout_constraintHorizontal_bias="0.6"/>
</android.support.constraint.ConstraintLayout>